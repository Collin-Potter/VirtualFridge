<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Base.Theme.Fridge" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/fridge_green_500</item>
        <item name="colorOnPrimary">@color/fridge_yellow_500</item>
        <item name="colorPrimaryDark">@color/fridge_green_700</item>
        <item name="colorOnSurface">@color/fridge_black</item>
        <item name="colorAccent">@color/fridge_green_700</item>
        <item name="colorSurface">@color/fridge_gray_50</item>
        <item name="colorSecondary">@color/fridge_yellow_500</item>
        <item name="android:colorBackground">@color/fridge_green_500</item>
    </style>

    <style name="Theme.Fridge" parent="Base.Theme.Fridge"/>

    <style name="Theme.Fridge.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Fridge.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.Fridge.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

</resources>